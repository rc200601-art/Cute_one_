<script>
// ===== NO BUTTON (IMPOSSIBLE MODE) =====
const noBtn = document.getElementById("no");

document.addEventListener("mousemove", (e) => {
  const r = noBtn.getBoundingClientRect();
  const dx = e.clientX - (r.left + r.width / 2);
  const dy = e.clientY - (r.top + r.height / 2);
  const dist = Math.sqrt(dx*dx + dy*dy);

  if (dist < 120) {
    noBtn.style.left = Math.random() * (window.innerWidth - 120) + "px";
    noBtn.style.top = Math.random() * (window.innerHeight - 60) + "px";
  }
});

// ===== ROSE SEQUENCE =====
const roses = [
  { img: "red.png", text: "Classic. Some things donâ€™t need improvement." },
  { img: "pink.png", text: "Softâ€¦ and impossible to ignore." },
  { img: "lightpink.png", text: "Doesnâ€™t try hard. Still wins." },
  { img: "white.png", text: "Calm on the outside. Dangerous inside." },
  { img: "blue.png", text: "Rare. Not everyone gets this." },
  { img: "bouquet.png", text: "Okay fine. I lost control here." }
];

let index = 0;

function start() {
  showRose();
}

function showRose() {
  const r = roses[index];

  document.getElementById("app").innerHTML = `
    <h1>${r.text}</h1>
    <img src="${r.img}" class="rose">
    <img src="me.png" class="me">
    <br>
    <button id="yes" onclick="next()">Click again ğŸŒ¹</button>
  `;
}

function next() {
  index++;
  if (index < roses.length) {
    showRose();
  } else {
    finale();
  }
}

// ===== FLOWER SHOWER =====
function finale() {
  document.getElementById("app").innerHTML = `
    <h1>Happy Rose Day Srishti ğŸ¥°</h1>
    <p>Itâ€™s meâ€¦ donâ€™t judge.<br>I just canâ€™t help doing these little things for you ğŸ’—</p>
  `;

  for (let i = 0; i < 35; i++) {
    const f = document.createElement("div");
    f.className = "fall";
    f.innerText = "ğŸŒ¸";
    f.style.left = Math.random() * 100 + "vw";
    document.body.appendChild(f);
  }
}
